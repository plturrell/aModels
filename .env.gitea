# Gitea Configuration for aModels
# Generated on 2025-11-14

# Gitea Service URL
# - For Docker services: use http://gitea:3000
# - For host services: port 3000 may not be accessible from host in this environment
export GITEA_URL_DOCKER="http://gitea:3000"
export GITEA_URL="http://gitea:3000"

# Gitea API Token
# Access Gitea UI via: docker exec -it gitea sh
# Then run: gitea admin user create --username admin --password admin123 --email admin@localhost --admin
# Generate token via Gitea CLI or create user first
export GITEA_TOKEN="430660c440034a111a002073ac3c77588d700dec"

# Webhook Secret for secure webhook delivery
export GITEA_WEBHOOK_SECRET="$(openssl rand -hex 32 2>/dev/null || echo 'GENERATE_ME')"

# Organization for extracted code repositories
export GITEA_OWNER="extract-service"

# Default repository settings
export GITEA_REPO_PREFIX="extracted-code"
export GITEA_AUTO_CREATE="true"

# SSH Port (changed from 2222 due to conflict)
export GITEA_SSH_PORT="2223"
