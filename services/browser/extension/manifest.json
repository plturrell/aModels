{
  "manifest_version": 3,
  "name": "aModels",
  "version": "0.3.0",
  "description": "aModels Browser Extension with SAP Horizon design system.",
  "action": {
    "default_title": "aModels",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "http://localhost/*",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "welcome.html",
        "welcome.js",
        "errors.js",
        "design-system-sap.css",
        "fonts/fonts.css",
        "fonts/*.woff2",
        "design-system.css",
        "command-palette.js",
        "command-palette.css",
        "tooltips.js",
        "tooltips.css",
        "connection-manager.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}


