# DMS Service Configuration
# Copy this file to .env and update with secure values

# Application settings
DMS_APP_NAME="aModels DMS"
DMS_DEBUG=false

# Database connections (CHANGE THESE PASSWORDS!)
DMS_POSTGRES_DSN=postgresql+psycopg://dms_user:CHANGE_ME_STRONG_PASSWORD@postgres:5432/dms
DMS_REDIS_URL=redis://redis:6379/0
DMS_NEO4J_URI=neo4j://neo4j:7687
DMS_NEO4J_USER=neo4j
DMS_NEO4J_PASSWORD=CHANGE_ME_NEO4J_PASSWORD

# Storage
DMS_STORAGE_ROOT=/data/documents

# External service URLs (optional)
# DMS_EXTRACT_URL=http://extract:8081
# DMS_CATALOG_URL=http://catalog:8084
# ORCHESTRATION_URL=http://orchestrator:8080
# DMS_USE_ORCHESTRATION=false

# Authentication (optional)
DMS_REQUIRE_AUTH=false
# DMS_JWT_SECRET=your-secret-key-here-change-in-production
# DMS_JWT_ALGORITHM=HS256
# DMS_API_KEYS=key1,key2,key3

# PostgreSQL (for docker-compose)
POSTGRES_USER=dms_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=dms

# Neo4j (for docker-compose)
NEO4J_AUTH=neo4j/CHANGE_ME_NEO4J_PASSWORD
